<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="504.0" prefWidth="715.0"
	xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.recuperarContrasenaController">
	<children>
		<MenuBar VBox.vgrow="NEVER">
			<menus>
				<Menu mnemonicParsing="false" text="Archivo">
					<items>
						<MenuItem mnemonicParsing="false" text="Salir" fx:id="salir" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Editar">

				</Menu>
				<Menu mnemonicParsing="false" text="Ayuda">
					<items>
						<MenuItem mnemonicParsing="false" text="Ayuda" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
		<AnchorPane maxHeight="-1.0" maxWidth="-1.0"
			prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
			<children>
				<Label layoutX="219.0" layoutY="39.0" prefHeight="32.0"
					prefWidth="334.0" text="RECUPERAR CONTRASEÑA" textFill="#5dbef4">
					<font>
						<Font name="System Bold" size="22.0" />
					</font>
				</Label>
				<TextField layoutX="230.0" layoutY="198.0"
					prefHeight="25.0" prefWidth="254.0" promptText="Inserta tu email:" fx:id="emailField"/>
				<Label layoutX="268.0" layoutY="172.0"
					text="Escribe tu correo electrónico:" textFill="#5dbef4">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
				<Label layoutX="236.0" layoutY="232.0"
					text="Recibirás un correo electrónico con tu contraseña.">
					<font>
						<Font size="11.0" />
					</font>
				</Label>
				<Button layoutX="371.0" layoutY="275.0"
					mnemonicParsing="false" prefHeight="32.0" prefWidth="114.0"
					style="-fx-background-color: red;" text="CANCELAR" textFill="WHITE"
					onAction="#handleCancel">
					<font>
						<Font name="System Bold" size="12.0" />
					</font>
				</Button>
				<Button layoutX="231.0" layoutY="275.0"
					mnemonicParsing="false" prefHeight="32.0" prefWidth="114.0"
					style="-fx-background-color: green;" text="ENVIAR" textFill="WHITE"
					onAction="#handleEnviar">
					<font>
						<Font name="System Bold" size="12.0" />
					</font>
				</Button>
			</children>
		</AnchorPane>
	</children>
</VBox>
